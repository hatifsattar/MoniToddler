<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorMainBackground"
    tools:context="com.example.hsattar.monitoddler.AddExtraVitals">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addBP"
        android:hint="Enter Blood Pressure"
        android:textColorHint="@color/colorlistFontDescHint"
        android:textColor="@color/colorlistFontDesc"
        android:layout_below="@+id/addHead"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addTemp"
        android:layout_below="@+id/addBP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Temperature"
        android:textColorHint="@color/colorlistFontDescHint"
        android:textColor="@color/colorlistFontDesc"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addSat"
        android:layout_below="@+id/addTemp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="@color/colorlistFontDescHint"
        android:textColor="@color/colorlistFontDesc"
        android:hint="Enter Saturation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Vitals for Patient: "
        android:id="@+id/addHead"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="17dp"
        android:textColor="@color/colorlistFontName" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/buttonshape"
        android:textColor="@color/colorMainButtonText"
        android:textSize="25sp"
        android:text="Save Vitals"
        android:id="@+id/buttonSaveVitals"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="74dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addNote"
        android:layout_below="@+id/addSat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter any additional Note"
        android:textColor="@color/colorlistFontDesc"
        android:textColorHint="@color/colorlistFontDescHint" />
</RelativeLayout>

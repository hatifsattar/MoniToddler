<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hsattar.monitoddler.ViewPatient">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="3dp"
                android:text="-"
                android:textColor="@color/colorlistFontName"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/critical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Healthy"
                android:textColor="@color/colorlistFontDesc"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="3dp"
                android:textAlignment="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_view_margin"
                android:background="@drawable/custom_view_page"
                android:paddingBottom="@dimen/activity_view_vertical_padding"
                android:paddingLeft="@dimen/activity_view_horizontal_padding"
                android:paddingRight="@dimen/activity_view_horizontal_padding"
                android:paddingTop="@dimen/activity_view_vertical_padding">

                <TextView
                    android:id="@+id/realtime_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:text="Real-time Vitals"
                    android:textColor="@color/colorlistFontName"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/x_axis"
                    android:layout_alignLeft="@+id/realtime_header"
                    android:layout_alignStart="@+id/realtime_header"
                    android:text="X-Axis"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/x_axis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/realtime_header"
                    android:text="-"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:text="Y-Axis"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/z_axis"
                    android:layout_alignEnd="@+id/x_axis"
                    android:layout_alignRight="@+id/x_axis"
                    android:layout_alignTop="@+id/tv"
                    android:text="-"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv"
                    android:text="Z-Axis"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/z_axis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv3"
                    android:text="-"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv4"
                    android:layout_marginTop="7dp"
                    android:text="Heart Rate"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/heartrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv5"
                    android:text="-"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv3"
                    android:text="Respiratory Rate"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/resprate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv4"
                    android:text="-"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_view_margin"
                android:background="@drawable/custom_view_page"
                android:paddingBottom="@dimen/activity_view_vertical_padding"
                android:paddingLeft="@dimen/activity_view_horizontal_padding"
                android:paddingRight="@dimen/activity_view_horizontal_padding"
                android:paddingTop="@dimen/activity_view_vertical_padding">

                <TextView
                    android:id="@+id/non_realtime_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:text="Additional Vitals"
                    android:textColor="@color/colorlistFontName"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/buttonAddVitals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_small"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Add"
                    android:textColor="@color/colorMainButtonText"
                    android:textSize="17sp"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additional Vitals/Note:"
                    android:textColor="@color/colorlistFontName"
                    android:textSize="17dp"
                    android:layout_below="@+id/lastUpdateTime"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp"
                    android:layout_below="@+id/non_realtime_header"
                    android:layout_alignLeft="@+id/non_realtime_header"
                    android:layout_alignStart="@+id/non_realtime_header" />

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/non_realtime_header" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Pressure"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp"
                    android:layout_below="@+id/textView6"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/bloodpressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/temperature"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saturation"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp"
                    android:layout_below="@+id/textView8"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/saturation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/colorlistFontDesc"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/bloodpressure"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note: \nSample Note"
                    android:textColor="@color/colorlistFontVitals"
                    android:textSize="17dp"
                    android:layout_below="@+id/textView10"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Update"
                    android:id="@+id/lastUpdateTime"
                    android:textColor="@color/colorlistFontDesc"
                    android:layout_below="@+id/note"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="5dp"
                    android:textStyle="italic" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

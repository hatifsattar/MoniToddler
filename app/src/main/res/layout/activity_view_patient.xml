<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorMainBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hsattar.monitoddler.ViewPatient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/view_vertical_margin"
        android:paddingLeft="@dimen/view_horizontal_margin"
        android:paddingRight="@dimen/view_horizontal_margin"
        android:paddingTop="@dimen/view_vertical_margin"
        android:background="@drawable/custom_view_page">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/Name"
        android:textColor="@color/colorlistFontName"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X-Axis"
        android:textSize="17dp"
        android:id="@+id/textView2"
        android:textColor="@color/colorlistFontDesc"
        android:layout_marginBottom="0dp"
        android:layout_alignBottom="@+id/x_axis"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/x_axis"
        android:textStyle="bold"
        android:textSize="17dp"
        android:textColor="@color/colorlistFontDesc"
        android:layout_below="@+id/Name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y-Axis"
        android:id="@+id/tv"
        android:textSize="17dp"
        android:textColor="@color/colorlistFontDesc"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/temp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:textColor="@color/colorlistFontDesc"
        android:layout_alignTop="@+id/tv"
        android:layout_alignRight="@+id/x_axis"
        android:layout_alignEnd="@+id/x_axis"
        android:layout_above="@+id/z_axis" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z-Axis"
        android:textSize="17dp"
        android:id="@+id/tv3"
        android:textColor="@color/colorlistFontDesc"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="17dp"
        android:id="@+id/z_axis"
        android:layout_alignTop="@+id/tv3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorlistFontDesc"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Critical"
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorlistFontVitals"
        android:textSize="17dp"
        android:layout_below="@+id/tv5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/critical"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorlistFontDesc"
        android:textStyle="bold"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate"
        android:id="@+id/tv5"
        android:textColor="@color/colorlistFontDesc"
        android:textSize="17dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/tv3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/heartrate"
        android:layout_alignTop="@+id/tv5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/colorlistFontDesc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respiratory Rate"
        android:id="@+id/tv4"
        android:layout_below="@+id/tv3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textSize="17dp"
        android:textColor="@color/colorlistFontDesc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/resprate"
        android:layout_alignTop="@+id/tv4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorlistFontDesc"
        android:textStyle="bold"
        android:textSize="17dp" />

    </RelativeLayout>

</RelativeLayout>

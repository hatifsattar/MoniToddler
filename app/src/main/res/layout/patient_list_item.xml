<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:padding="7dp"
    android:background="@drawable/custom_list_item">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/font_patient_list_name"
        android:textColor="@color/colorlistFontName"
        android:text="Patient Name"
        android:id="@+id/patient_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ward Id: ABC123"
        android:id="@+id/ward_id"
        android:textColor="@color/colorlistFontDesc"
        android:layout_below="@+id/patient_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/font_patient_list_descr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor: John Smith"
        android:textColor="@color/colorlistFontDesc"
        android:id="@+id/doctor_name"
        android:layout_below="@+id/ward_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/font_patient_list_descr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filing Number"
        android:textColor="@color/colorlistFontDesc"
        android:id="@+id/case_name"
        android:layout_below="@+id/doctor_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:textSize="@dimen/font_patient_list_descr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate: 80"
        android:textColor="@color/colorlistFontVitals"
        android:id="@+id/x_axis"
        android:layout_alignTop="@+id/ward_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/font_patient_list_descr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Pressure: 80, 120"
        android:textColor="@color/colorlistFontVitals"
        android:id="@+id/bloodpressure"
        android:layout_below="@+id/x_axis"
        android:layout_alignRight="@+id/x_axis"
        android:layout_alignEnd="@+id/x_axis"
        android:textSize="@dimen/font_patient_list_descr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturation: 100"
        android:textColor="@color/colorlistFontVitals"
        android:id="@+id/saturation"
        android:layout_below="@+id/bloodpressure"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/font_patient_list_descr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: 30*C"
        android:textColor="@color/colorlistFontVitals"
        android:id="@+id/temperature"
        android:layout_below="@+id/saturation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/font_patient_list_descr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="@color/colorlistFontVitals"
        android:id="@+id/last_updated"
        android:layout_below="@+id/case_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="@dimen/font_patient_list_name" />
</RelativeLayout>